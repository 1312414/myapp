<!-- jumbotron -->
<div class="jumbotron">
    <h1 class="display-5" style="text-align: center">Hello, this is my home page!</h1>
</div>
<!-- Posts -->
<div class="row">
    <% @posts.each do |post| %>
        <div class="col-sm-4">
            <h3> <%= post.title %></h3>
            <p><%= truncate(post.content,length: 100) %></p>
            <%= link_to 'Read more', post_path(post) %>
        </div>
    <% end %>
</div>